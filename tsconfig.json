{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		/* Basic Options */
		"outDir": ".",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		//"noUnusedParameters": true,
		"strict": true,
		"alwaysStrict": true,
		"composite": true,

		/* Module Resolution Options */
		"resolveJsonModule": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"files": [
		"package.json",
	],
}
